{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "base",
					"color": "#f1f5f9",
					"name": "Base"
				},
				{
					"slug": "contrast",
					"color": "#1e293b",
					"name": "Contrast"
				},
				{
					"slug": "primary",
					"color": "#3b82f6",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#06b6d4",
					"name": "Secondary"
				},
				{
					"slug": "dark-navy",
					"color": "#0f172a",
					"name": "Dark Navy"
				},
				{
					"slug": "white",
					"color": "#ffffff",
					"name": "White"
				},
				{
					"slug": "slate-gray",
					"color": "#475569",
					"name": "Slate Gray"
				},
				{
					"slug": "muted-gray",
					"color": "#64748b",
					"name": "Muted Gray"
				},
				{
					"slug": "transparent",
					"color": "transparent",
					"name": "Transparent"
				}
			],
			"gradients": [
				{
					"slug": "primary-white",
					"gradient": "linear-gradient(#3b82f6 49.9%,#fff 50%)",
					"name": "Primary color to white"
				},
				{
					"slug": "white-primary",
					"gradient": "linear-gradient(#fff 49.9%,#3b82f6 50%)",
					"name": "Horizontal white to Primary color"
				}
			],
			"duotone": [
				{
					"colors": [ "#06b6d4", "#3b82f6"],
					"slug": "secondary-primary",
					"name": "Secondary and primary"
				},
				{
					"colors": ["#3b82f6", "#1e293b"],
					"slug": "primary-contrast",
					"name": "Primary and Contrast"
				}
			]
		},
		"layout": {
			"contentSize": "750px",
			"wideSize": "1200px"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"name": "System",
					"slug": "system",
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
				},
				{
					"name": "Serif",
					"slug": "serif",
					"fontFamily": "\"Times New Roman\",\"New York\",Times,\"Noto Serif\",serif"
				},
				{
					"name": "Monospace",
					"slug": "monospace",
					"fontFamily": "Consolas,Menlo,Monaco,\"SF Mono\",\"DejaVu Sans Mono\",\"Roboto Mono\",\"Courier New\",Courier,monospace"
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"size": "1rem",
					"name": "Small",
					"fluid": false
				},
				{
					"slug": "medium",
					"size": "1.125rem",
					"name": "Medium",
					"fluid": false
				},
				{
					"slug": "large",
					"size": "2rem",
					"name": "Large",
					"fluid": {
						"min": "1.75rem",
						"max": "2rem"
					}
				},
				{
					"slug": "x-large",
					"size": "2.75rem",
					"name": "XL",
					"fluid": {
						"min": "2.5rem",
						"max": "2.75rem"
					}
				},
				{
					"slug": "xx-large",
					"size": "3.75rem",
					"name": "XXL",
					"fluid": {
						"min": "3rem",
						"max": "3.75rem"
					}
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"blocks": {
			"core/code": {
				"color": {
					"text": "var(--wp--preset--color--contrast)",
					"background": "var(--wp--preset--color--base)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--monospace)",
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				"spacing": {
					"padding": {
						"top": "0.5rem",
						"right": "0.75rem",
						"bottom": "0.5rem",
						"left": "0.75rem"
					}
				},
				"border": {
					"radius": "4px"
				}
			},
			"core/comment-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-edit-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-comments-form": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				"css": "& input[type='text'], & input[type='email'], & input[type='url'], & textarea { background-color: var(--wp--preset--color--white); border: 2px solid var(--wp--preset--color--base); border-radius: 4px; padding: 0.75rem 1rem; color: var(--wp--preset--color--contrast); font-size: 1rem; width: 100%; } & input[type='text']:focus, & input[type='email']:focus, & input[type='url']:focus, & textarea:focus { border-color: var(--wp--preset--color--primary); outline: none; } & input[type='submit'] { background-color: var(--wp--preset--color--primary); color: var(--wp--preset--color--white); border: none; border-radius: 4px; padding: 0.75rem 1.5rem; font-weight: 700; cursor: pointer; } & input[type='submit']:hover { background-color: var(--wp--preset--color--secondary); }"
			},
			"core/comment-reply-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/navigation": {
				"css": "& .wp-block-site-title{ margin:0; font-weight:400;}",
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						},
						"typography": {
							"textDecoration": "underline"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--contrast)"
							},
							"typography": {
								"textDecoration": "none"
							}
						},
						":focus": {
							"color": {
								"text": "var(--wp--preset--color--contrast)"
							}
						},
						":active": {
							"color": {
								"text": "var(--wp--preset--color--contrast)"
							}
						}
					}
				}
			},
			"core/post-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-content": {
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--60)",
						"bottom": "var(--wp--preset--spacing--60)"
					}
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-excerpt": {
				"elements": {
					"link": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--small)"
						}
					}
				}
			},
			"core/post-featured-image": {
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--40)"
					}
				}
			},
			"core/post-template": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--50)",
						"bottom": "var(--wp--preset--spacing--50)"
					}
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/query-pagination": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--50)"
					}
				}
			},
			"core/search": {
				"css": ".wp-block-search__button-inside .wp-block-search__inside-wrapper{border: none;}",
				"typography": {
					"lineHeight": "1"
				}
			},
			"core/paragraph": {
				"color": {
					"text": "var(--wp--preset--color--slate-gray)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "1.7"
				},
				"spacing": {
					"margin": {
						"bottom": "1rem"
					}
				}
			},
			"core/heading": {
				"color": {
					"text": "var(--wp--preset--color--dark-navy)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system)",
					"fontWeight": "700",
					"lineHeight": "1.3"
				},
				"spacing": {
					"margin": {
						"top": "1.5rem",
						"bottom": "1rem"
					}
				}
			},
			"core/list": {
				"color": {
					"text": "var(--wp--preset--color--slate-gray)"
				},
				"spacing": {
					"margin": {
						"bottom": "1rem"
					},
					"padding": {
						"left": "1.5rem"
					}
				}
			},
			"core/quote": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				},
				"border": {
					"color": "var(--wp--preset--color--primary)",
					"style": "solid",
					"width": "0 0 0 4px"
				},
				"spacing": {
					"padding": {
						"left": "1.5rem"
					},
					"margin": {
						"top": "1.5rem",
						"bottom": "1.5rem"
					}
				},
				"typography": {
					"fontStyle": "italic",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"core/details": {
				"color": {
					"text": "var(--wp--preset--color--slate-gray)",
					"background": "var(--wp--preset--color--white)"
				},
				"border": {
					"color": "var(--wp--preset--color--base)",
					"style": "solid",
					"width": "1px",
					"radius": "4px"
				},
				"spacing": {
					"padding": "1rem",
					"margin": {
						"bottom": "1rem"
					}
				}
			},
			"core/preformatted": {
				"color": {
					"text": "var(--wp--preset--color--contrast)",
					"background": "var(--wp--preset--color--base)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--monospace)",
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				"spacing": {
					"padding": "1rem"
				},
				"border": {
					"radius": "4px"
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"elements": {
			"button": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--30)",
						"right": "var(--wp--preset--spacing--30)",
						"bottom": "var(--wp--preset--spacing--30)",
						"left": "var(--wp--preset--spacing--30)"
					}
				},
				"border": {
					"color": "var(--wp--preset--color--transparent)",
					"width": "4px",
					"style": "solid",
					"radius": "4px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--white)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "700"
				},
				"shadow": "var(--wp--preset--shadow--natural)",
				":hover": {
					"border": {
						"color": "var(--wp--preset--color--secondary)"
					},
					"color": {
						"background": "var(--wp--preset--color--secondary)"
					}
				}
			},
			"caption": {
				"color": {
					"text": "var(--wp--preset--color--muted-gray)"
				}
			},
			"cite": {
				"color": {
					"text": "var(--wp--preset--color--slate-gray)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--secondary)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--primary)"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--primary)"
					}
				}
			}
		},
		"spacing": {
			"padding": {
				"right": "var(--wp--preset--spacing--50)",
				"left": "var(--wp--preset--spacing--50)"
			}
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontFamily": "var(--wp--preset--font-family--system)",
			"lineHeight": "1.7"
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "no-title",
			"title": "No title",
			"postTypes": [ "post","page" ]
		}
	]
}